<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="50dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_unselected_date">

    <TextView
        android:id="@+id/text_day_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="14dp"
        tools:text="Mon"
        android:textSize="13sp"
        android:textColor="@color/purple_700"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:singleLine="true"
        android:ellipsize="marquee"
        />
    <TextView
        android:id="@+id/text_day_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/text_day_name"
        app:layout_constraintEnd_toEndOf="@+id/text_day_name"
        app:layout_constraintTop_toBottomOf="@+id/text_day_name"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="3dp"
        tools:text="1"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#60666d"
        android:layout_marginBottom="14dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>